<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mongolog_browser.handler.mongo.class">Monolog\Handler\MongoDBHandler</parameter>
        <parameter key="mongolog_browser.model.log_repository.class">Lexik\Bundle\MonologBrowserBundle\Model\LogRepository</parameter>
    </parameters>

    <services>
        <service id="mongolog_browser.handler.mongo" class="%mongolog_browser.handler.mongo.class%">
            <argument type="service" id="mongolog_browser.mongo.connection" />
            <argument>%mongolog_browser.mongo.database_name%</argument>
            <argument>%mongolog_browser.mongo.collection_name%</argument>
        </service>

        <service id="mongolog_browser.model.log_repository" class="%mongolog_browser.model.log_repository.class%">
            <argument type="service" id="mongolog_browser.mongo.connection" />
            <argument>%mongolog_browser.mongo.database_name%</argument>
            <argument>%mongolog_browser.mongo.collection_name%</argument>
        </service>
    </services>
</container>
